---
interface Props {
  labels: string[];
}

const { labels } = Astro.props;
---

<div class="">
  <p class="text-sm inline-block m-0 p-0 italic">Categories :</p>
  <ul class="list-none inline-block m-0 p-0">
    {
      labels?.map((label: string) => {
        return (
          <li class="text-sm inline-block p-0 m-0 pl-1 [&:not(:last-child)]:after:content-['_,']">
            <a
              class="underline font-bold after:content-['_â†—'] hover:text-navy-dark dark:hover:text-navy-light hover:decoration-2"
              href={`/blog/label/` + label}
            >
              {label}
            </a>
          </li>
        );
      })
    }
  </ul>
</div>
